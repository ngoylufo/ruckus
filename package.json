{
	"name": "ruckus",
	"version": "0.1.0",
	"description": "A JavaScript game framework.",
	"module": "main.mjs",
	"main": "main",
	"files": [
		"modules",
		"main.*js",
		"README.md"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./main.mjs",
			"require": "./main.js"
		},
		"./events": {
			"import": "./modules/events.mjs",
			"require": "./modules/events.js"
		}
	},
	"scripts": {
		"dev": "rollup -cw",
		"build": "rollup -c",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"author": "Ngoy Lufo",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-alias": "^3.1.2",
		"@rollup/plugin-commonjs": "^19.0.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"prettier": "^2.3.2",
		"rollup": "^2.52.3",
		"rollup-plugin-analyzer": "^4.0.0"
	}
}
